{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "login": {
      "type": "string",
      "minLength": 4,
      "maxLength": 80
    },
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 80
    },
    "surname": {
      "type": "string",
      "minLength": 2,
      "maxLength": 80
    },
    "password": {
      "type": "string",
      "minLength": 8,
      "maxLength": 40
    },
    "organization": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100
    },
    "email": {
      "type": "string",
      "minLength": 2,
      "maxLength": 80
    },
    "phoneNumber": {
      "type": "string",
      "minLength": 5,
      "maxLength": 25
    }
  },
  "required": [
    "login",
    "name",
    "surname",
    "password",
    "organization",
    "email",
    "phoneNumber"
  ]
}